{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "OAuth 2.0 Client Metadata Document (draft-ietf-oauth-dyn-reg-27)",
  "type": "object",
  "patterns": {
    "url": {
        "type": "string",
        "pattern": "^([a-zA-Z_0-9]+)://[^\\s/$.?#].[^\\s]*$$"
    }
  },
  "properties": {
    "redirect_uris": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/patterns/url"
      }
    },
    "token_endpoint_auth_method": {
      "type": "string"
    },
    "grant_types": {
      "type": "array",
      "minItems": 1,
      "items":{
        "type": "string"
      }
    },
    "response_types": {
      "type": "array",
      "minItems": 1,
      "items":{
        "type": "string"
      }
    },
    "client_name": {
      "type": "string"
    },
    "client_uri": {
        "$ref": "#/patterns/url"
    },
    "logo_uri": {
        "$ref": "#/patterns/url"
    },
    "scope": {
        "type": "array"
    },
    "contacts": {
        "type": "array",
        "items":{
            "type": "string"
        }
    },
    "tos_uri": {
        "$ref": "#/patterns/url"
    },
    "policy_uri": {
        "$ref": "#/patterns/url"
    },
    "jwks_uri": {
        "$ref": "#/patterns/url"
    },
    "jwks": {

    },
    "software_id": {
        "type": "string"
    },
    "software_version": {
        "type": "string"
    }
  },
  "oneOf": [
        {
          "type": "object",
          "required": [ "jwks" ]
        },
        {
          "type": "object",
          "required": [ "jwks_uri" ]
        }
  ]
}
