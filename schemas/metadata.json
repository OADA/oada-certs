{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "OAuth client metadata",
  "type": "object",
  "patterns": {
    "url": {
        "type": "string",
        "pattern": "^(https?|ftp)://[^\\s/$.?#].[^\\s]*$$"
    }
  },
  "properties": {
    "redirect_uris": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/patterns/url"
      }
    },
    "token_endpoint_auth_method": {
      "type": "string"
    },
    "grant_types": {
      "type": "array",
      "minItems": 1,
      "items":{
        "type": "string",
        "anyOf": [
            { "pattern": "^authorization_code$" },
            { "pattern": "^implicit$" },
            { "pattern": "^password$" },
            { "pattern": "^client_credentials$" },
            { "pattern": "^refresh_token$" },
            { "pattern": "^urn:ietf:params:oauth:grant-type:.*$" }
        ]
      }
    },
    "response_types": {
      "type": "array",
      "minItems": 1,
      "items":{
        "type": "string",
        "anyOf": [
            { "pattern": "^code$" },
            { "pattern": "^token$" }
        ]
      }
    },
    "client_name": {
      "type": "string"
    },
    "client_uri": {
        "$ref": "#/patterns/url"
    },
    "logo_uri": {
        "$ref": "#/patterns/url"
    },
    "scope": {
        "type": "array"
    },
    "contacts": {
        "type": "array",
        "items":{
            "type": "string"
        }
    },
    "tos_uri": {
        "$ref": "#/patterns/url"
    },
    "policy_uri": {
        "$ref": "#/patterns/url"
    },
    "jwks_uri": {
        "$ref": "#/patterns/url"
    },
    "jwks": {
        "type": "object"
    },
    "software_id": {
        "type": "string"
    },
    "software_version": {}
  }
}